rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Función auxiliar: verifica si es el admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'isilber31@gmail.com';
    }
    
    // Función auxiliar: verifica si el usuario está autorizado
    function isAuthorized() {
      return request.auth != null && 
             firestore.exists(/databases/(default)/documents/authorized_users/$(request.auth.uid)) &&
             firestore.get(/databases/(default)/documents/authorized_users/$(request.auth.uid)).data.status == 'approved';
    }
    
    // Reglas para las imágenes de los usuarios
    match /users/{userId}/images/{allPaths=**} {
      // Permitir lectura a cualquier usuario autenticado y autorizado
      allow read: if request.auth != null && (isAdmin() || isAuthorized());
      
      // Permitir escritura solo al dueño de la carpeta (o al admin)
      allow write: if request.auth != null && 
                      (request.auth.uid == userId || isAdmin()) && 
                      (isAdmin() || isAuthorized());
    }
  }
}
